<div class="loginContainer">
<form action="/product/create/{{id}}" method="POST">

<div class="edit-page">
  <div class="form">
    
     <label for="name">Ingresa el nombre del servicio</label>
    <input type="text" name="name"></input><br>
    <label for="description">Ingresa la descripción del servicio</label>
    <input type="text" name="description"></input><br>

    <label for="service_type">Tipo de Servicio
      <select name="service_type" id="type">
         <option value="Lavanderia">Lavanderia</option>
         <option value="Tintoreria">Tintoreria</option>
         <option value="Planchaduria">Planchaduria</option>
      </select>
   </label>

     <label for="service_pack">Kilos
      <select name="service_pack" id="type">
         <option value="3kg">3kg</option>
         <option value="5kg">5kg</option>
         <option value="7kg">7kg</option>
         <option value="10kg">10kg</option>
      </select>
   </label>

    <label for="price">Ingresa el precio del servicio</label>
    <input type="number" name="price" value="price"></input><br>

    <button type="submit">Agregar servicio</button>
    